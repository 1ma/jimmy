{
    "name": "uma/jimmy",
    "description": "Programming Bitcoin library",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Bitcoin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bitcoin\\Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "c2sp/wycheproof",
                "version": "dev-master",
                "source": {
                    "url": "https://github.com/C2SP/wycheproof",
                    "type": "git",
                    "reference": "master"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "trezor/bip39",
                "version": "dev-master",
                "source": {
                    "url": "https://github.com/trezor/python-mnemonic",
                    "type": "git",
                    "reference": "master"
                }
            }
        }
    ],
    "require": {
        "php": "~8.4.0",
        "ext-gmp": "*"
    },
    "require-dev": {
        "c2sp/wycheproof": "dev-master",
        "friendsofphp/php-cs-fixer": "^3.75",
        "phpunit/phpunit": "^12.1",
        "trezor/bip39": "dev-master",
        "uma/ocular": "^2.0"
    },
    "scripts": {
        "lint": "@php vendor/bin/php-cs-fixer fix -v",
        "integration-node": [
            "docker compose up --quiet-pull --wait",
            "jq -r '.blocks[]' tests/test-data.json | xargs -t -I{} docker compose exec -T knots bitcoin-cli -regtest submitblock {}"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
